@model projectMVC.DataTypes.UserDTO

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container">
    <h2>Sign Up</h2>
    <hr />
    <form method="post" action="signUpForm">
        <div class="form-group">
            <label for="Id">ID:</label>
            <input type="text" class="form-control" id="Id" name="Id" value="@Model?.Id" placeholder="Enter ID">
        </div>
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" class="form-control" id="username" name="username" value="@Model?.UserName"  placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="pasWord">pasWord:</label>
            <input type="text" class="form-control" id="pasWord" name="pasWord" value="@Model?.PasWord"  placeholder="Creat PassWord">
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number:</label>
            <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model?.PhoneNumber" placeholder="Enter phone number">
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" id="email" name="email" value="@Model?.Email"  placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="UserAddress">Address:</label>
            <input type="text" class="form-control" id="UserAddress" name="UserAddress" value="@Model?.UserAddress" placeholder="Enter address">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
